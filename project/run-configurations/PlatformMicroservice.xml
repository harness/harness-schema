<configuration name="Platform Service" type="BlazeCommandRunConfigurationType" factoryName="Bazel Command">
    <blaze-settings handler-id="BlazeJavaRunConfigurationHandlerProvider" kind="java_binary" blaze-command="run"
                    keep-in-sync="true">
        <blaze-target>//platform-service/service:module</blaze-target>
        <blaze-user-exe-flag>server</blaze-user-exe-flag>
        <blaze-user-exe-flag>$PROJECT_DIR$/../platform-service/config/config.yml</blaze-user-exe-flag>
    </blaze-settings>
    <method v="2">
        <option name="Blaze.BeforeRunTask" enabled="true"/>
    </method>
</configuration>
